<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/plan_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.ihunter.taskee.ui.CustomTextView
        android:id="@+id/plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plan_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/plan_date"
        android:paddingEnd="10dp"
        android:text="@string/placeholder_title"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        app:fontName="@string/lato_regular" />

    <com.ihunter.taskee.ui.CustomTextView
        android:id="@+id/plan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan_note"
        android:layout_alignBottom="@+id/plan_title"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/plan_title"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/placeholder_date"
        android:textColor="@color/textColorSecondary"
        android:textSize="12sp"
        app:fontName="@string/lato_regular" />

    <com.ihunter.taskee.ui.CustomTextView
        android:id="@+id/plan_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plan_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/placeholder_lorem"
        android:textColor="@color/textColorSecondary"
        android:textSize="12sp"
        app:fontName="@string/lato_regular" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/edit_task"
        style="@style/TaskViewActionImages"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView3"
        android:background="?selectableItemBackground"
        app:iiv_icon="@string/faw_pencil"
        app:srcCompat="@drawable/fab" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/delete_task"
        style="@style/TaskViewActionImages"
        android:layout_alignTop="@+id/edit_task"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/edit_task"
        android:background="?selectableItemBackground"
        app:iiv_icon="@string/faw_trash_o"
        app:srcCompat="@drawable/fab" />


    <ImageView
        android:id="@+id/priority_tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:tint="@color/low_priority"
        app:srcCompat="@drawable/priority_triangle" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/imageView3"
        style="@style/TaskViewActionImages"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plan_note"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="?selectableItemBackground"
        app:iiv_icon="@string/faw_check"
        app:srcCompat="@drawable/fab" />

</RelativeLayout>