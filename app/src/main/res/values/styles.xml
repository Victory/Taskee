<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="CreateTaskUrgencyRadioButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontName">@string/lato_regular</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontName">@string/lato_regular</item>
    </style>
    <style name="CreateTaskChooserTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="fontName">@string/lato_regular</item>
    </style>

    <style name="ItemCalendarViewActionImages">
        <item name="android:layout_width">@dimen/upcoming_plan_action_size</item>
        <item name="android:layout_height">@dimen/upcoming_plan_action_size</item>
        <item name="iiv_color">@color/colorPrimaryTextLight</item>
    </style>

    <style name="ItemCalendarViewDescriptionTime">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
        <item name="android:textSize">12sp</item>
        <item name="fontName">@string/lato_regular</item>
    </style>

    <style name="CustomDialogActionButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/dialog_buttons</item>
        <item name="fontName">@string/lato_bold</item>
    </style>

</resources>
